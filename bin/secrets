#!/usr/bin/env bash
set -e

readonly default_env=Dev
readonly default_namespace=$(id -nu)-$(cat /etc/hostname)
if [ -f .env ]; then
    source .env
fi
APP_ENV=${APP_ENV:-default_env}
APP_NAME=${APP_NAME:-default_namespace}
read -p "What is your app name (set via APP_NAME)? [${APP_NAME}]: " app_name
read -p "What is your app env (set via APP_ENV)? [${APP_ENV}]: " app_env
namespace="/${app_env:-${APP_ENV}}/Deploy/${app_env:-${APP_NAME}}"

function prompt() {
    local param_name=$1
    local default_value=${2:-""}
    local type=${3:-SecureString}
    local user_value

    read -p "${param_name} [${default_value}]: " user_value
    user_value=${user_value:-${default_value}}
    [ -z "${user_value}" ] && ( echo "empty input, skipping.."; return; )
    aws ssm put-parameter \
        --name "${namespace}/${param_name}" \
        --type "${type}" \
        --value "${user_value}" \
        --overwrite
}

echo "Tip: App user session, a long random string"
prompt "session_secret_key" "${TF_VAR_session_secret_key}"
echo "Tip: Database user password used by the App, a long random string"
prompt "mysql_password" "${TF_VAR_mysql_password}"
echo "Tip: https://console.cloud.google.com/apis/api/safebrowsing.googleapis.com/credentials"
prompt "google_api_key" "${TF_VAR_google_api_key}"
echo "Tip: https://www.google.com/recaptcha/admin/"
prompt "recaptcha_site_key" "${TF_VAR_recaptcha_site_key}" "String"
prompt "recaptcha_secret_key" "${TF_VAR_recaptcha_secret_key}"
echo "Tip: https://dashboard.stripe.com/apikeys"
prompt "stripe_publishable_key" "${TF_VAR_stripe_publishable_key}" "String"
prompt "stripe_secret_key" "${TF_VAR_stripe_secret_key}"
echo "Tip: Given after you run 'stripe listen --forward-to localhost:5000/webhook/stripe'"
prompt "stripe_webhook_secret" "${TF_VAR_stripe_webhook_secret}"
echo "Tip: https://app.sendgrid.com/settings/api_keys"
prompt "sendgrid_api_key" "${TF_VAR_sendgrid_api_key}"
echo "Tip: https://data.phishtank.com/account.php"
prompt "phishtank_username" "${TF_VAR_phishtank_username}" "String"
prompt "phishtank_key" "${TF_VAR_phishtank_key}"
echo "Tip: https://account.shodan.io/"
prompt "honeyscore_key" "${TF_VAR_honeyscore_key}"
echo "Tip: https://www.projecthoneypot.org/httpbl_configure.php"
prompt "projecthoneypot_key" "${TF_VAR_projecthoneypot_key}"
echo "Tip: https://domain-reputation.whoisxmlapi.com/api/documentation/making-requests"
prompt "whoisxmlapi_key" "${TF_VAR_whoisxmlapi_key}"
